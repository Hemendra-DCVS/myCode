
public class Solution {
	public static void rowWiseSum(int[][] mat) {
		//Your code goes here
        for(int i =0; i<mat.length; i++){
            int sum =0;
            for(int j =0; j<mat[i].length; j++){
                sum = sum + mat[i][j];
            }
            System.out.print(sum + " ");
        }
	}

}



public class Solution {

	public static void rowWiseSum(int[][] mat) {
		//Your code goes here
        int rows = mat.length;
        if(rows <1){
            return;
        }
        int cols = mat[0].length;
        for(int i=0;i<rows;i++){
            int sum = 0;
            for(int j=0; j<cols;j++){
                sum = sum + mat[i][j];
            }
            System.out.print(sum + " ");
        }
        System.out.println(); //this line for the next input if we have multiple inputs for the test case then after completing one input we go to the next line to print the second input
	}
}

