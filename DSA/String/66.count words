
public class Solution {

	public static int countWords(String str) {	
		//Your code goes here
		int count = 1;
		for(int i=0;i<str.length();i++){
			char c = str.charAt(i);
			if(c == ' '){  //32 is ASCII value for the space
				count++;
			}
		} 
		return count;
	}

}

//string data structure specialized to store the char data types
//offers set of default functions on strings