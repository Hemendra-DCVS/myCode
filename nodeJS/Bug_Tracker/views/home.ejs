<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Issue Tracker</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <!-- Left side of the navbar -->
          <a class="navbar-brand" href="#">
            <i class="fas fa-bug"></i> Issue Tracker
          </a>
          
          <!-- Right side of the navbar -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" id="navlinks" href="#create-project">Create Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#all-projects">View Projects</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <!-- List of Projects -->
    <div class="container mt-5">
      <h1 class="display-4 text-primary text-center" id="all-projects">List of Projects</h1>
      <ul>
        <% all_projects.forEach((project) => { %>
          <li>
            <h3><a href="/projects/<%= project._id %>/create-issue">Create Issue for <%= project.projectTitle %></a></h3>
            <p>Description: <%= project.description %></p>
            <p>Author: <%= project.Author %></p>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- Create a New Project Form -->
    <div class="container text-center mt-5">
        <h1 class="display-4 text-primary" id="create-project">Create a New Project</h1>
    </div>

    <br>
    <form class="col-md-6 mx-auto" action="/projects/create" method="POST">
      <div class="form-group">
        <label for="projectTitle">Project Title:</label>
        <input type="text" class="form-control" id="projectTitle" name="projectTitle" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
      </div>
      <div class="form-group">
        <label for="Author">Author:</label>
        <input type="text" class="form-control" id="Author" name="Author" required>
      </div>
      <button type="submit" class="btn btn-primary">Create Project</button>
    </form>

    <!-- Back to Top Button -->
    <div class="back-to-top">
      <a href="#top">Go to Top <i class="fa-solid fa-circle-up fa-flip"></i></a>
    </div>

    <!-- Custom JavaScript -->
    <script src="/assets/JavaScript/home.script.js"></script>
</body>
</html>
