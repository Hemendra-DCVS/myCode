import java.util.*;

public class Solution {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i = 1; i<=n; i++){
			for(int j =1; j<=n-i; j++){
				System.out.print(" ");
			}
			 int khelper = i;

			 for(int k = 0; k < i; k++) {
				System.out.print(khelper);
				khelper++;
			}
			int lhelper = khelper-2;
			for(int l = 0; l < i - 1; l++){
				System.out.print(lhelper);
				lhelper--;
			}
			System.out.println();
		}
	}
}
