<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include custom CSS for styling -->
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>
    <!-- Container for the entire page -->
    <div class="container mt-5">
        <!-- Page title -->
        <h1 class="text-center" id="page-heading">Task Manager</h1>
        <div class="row mt-4">
            <!-- Form for adding a new task (left column) -->
            <div class="col-md-6">
                <!-- Section title -->
                <h3>Add Task</h3>
                <!-- Task input form -->
                <form id="taskForm" action="/add-task" method="post">
                    <!-- Input field for task description -->
                    <div class="form-group">
                        <label for="taskDescription">Task Description</label>
                        <input type="text" class="form-control" name="task" placeholder="Enter Task" required>
                    </div>
                    <!-- Input field for due date -->
                    <div class="form-group">
                        <label for="dueDate">Due Date</label>
                        <input type="date" class="form-control" name="date">
                    </div>
                    <!-- Dropdown for task category -->
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" name="category">
                            <option value="personal">Personal</option>
                            <option value="work">Work</option>
                            <option value="Shopping">Shopping</option>
                            <option value="travel">Travel</option>
                        </select>
                    </div>
                    <!-- Button to submit the form -->
                    <button type="submit" class="btn btn-primary">Add Task</button>
                </form>
            </div>
            
            <!-- Task list (right column) -->
            <div class="col-md-6">
                <!-- Section title -->
                <h3>Task List</h3>
                <!-- Unordered list to display tasks -->
                <ul id="taskList" class="list-group">
                  <% tasks_list.forEach(function(task) { %>
                    <!-- List item for each task -->
                    <li class="list-group-item">
                      <!-- Container for task details -->
                      <div class="d-flex justify-content-between align-items-start">
                        <!-- Checkbox for task completion -->
                        <div class="task-item">
                          <input type="checkbox" id="task<%= task._id %>" class="task-checkbox task-big-checkbox">
                          <!-- Label to display task details -->
                          <label for="task<%= task._id %>" class="task-details">
                            <!-- Strong tag for task description (bold) -->
                            <strong><%= task.task %></strong><br>
                            <!-- Display task category and date -->
                            <%= task.category %> <%= task.date %>
                          </label>
                        </div>
                        <!-- Form for deleting a task -->
                        <form action="/delete-task/<%= task._id %>" method="post" class="delete-form">
                          <!-- Button to delete the task -->
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </div>
                    </li>
                  <% }); %>
                </ul>
              </div>
        </div>
    </div>

     <!-- Add Bootstrap and JavaScript libraries -->
     <!-- Include jQuery, Popper.js, and Bootstrap JavaScript -->
     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
